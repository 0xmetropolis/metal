{
  "name": "metro",
  "version": "0.0.1",
  "description": "Smart contract visualization tool.",
  "author": "Metropolis (@0xmetropolis)",
  "bin": {
    "metro": "./dist/run"
  },
  "homepage": "https://github.com/0xmetropolis/cli",
  "license": "ISC",
  "main": "dist/index.js",
  "repository": "0xmetropolis/cli",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "watch": "tsc -w",
    "dev": "yarn build && yarn install:dev && metro -h",
    "install:dev": "yarn global add file:$PWD"
  },
  "dependencies": {
    "chalk": "^2.0.1",
    "husky": "^0.14.3",
    "inquirer": "^3.2.0",
    "node-emoji": "^1.7.0",
    "yargs": "^17.7.2",
    "dotenv-flow": "^3.2.0"
  },
  "devDependencies": {
    "@types/chalk": "^0.4.31",
    "@types/cors": "^2.8.13",
    "@types/dotenv-flow": "^3.2.0",
    "@types/inquirer": "^0.0.35",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@types/node-emoji": "^1.4.0",
    "@types/supertest": "^2.0.12",
    "@types/yargs": "^8.0.1",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "babel-eslint": "^7.2.3",
    "bdd-stdin": "^0.2.0",
    "eslint": "^8.36.0",
    "eslint-config-buildo": "^0.2.2",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "lint-staged": "^4.0.2",
    "prettier": "^2.8.8",
    "supertest": "^6.3.3",
    "test": "^0.6.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.2",
    "typescript-eslint-parser": "^4.0.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ]
  }
}
